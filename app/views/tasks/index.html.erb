<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id) %>: <%= task.completed %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<% link_name = 'Add a new task' %>
<h2><%= link_to link_name, tasks_new_path %></h2>
